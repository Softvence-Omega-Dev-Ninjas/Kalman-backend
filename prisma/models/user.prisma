model User {
    id String @id @default(uuid())
    name String? 
    email String
    phone String
    password String
    profile_image String?
    profession String?
    bio String?
    street_address String?
    city String?
    otp Int?
    state String?
    zip_code String?
    is_deleted Boolean @default(false)
    role Role @default(CUSTOMER)
    trader TradesMan?
    review Review[]
    verification Status @default(PENDING)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    jobs Jobs[]
    proposal Proposal[]
    userJobShortList JobShortlist[] @relation("JobSeekerAction")
    tradesman JobShortlist[] @relation("TradesmanTarget")
    blog Blog[]
    sendMessage Message[] @relation("SentMessages")
    reciveMessage Message[] @relation("ReceivedMessages")
} 

enum Role {
    ADMIN
    CUSTOMER
    TRADESMAN
}

enum Status {
    PENDING
    COMPLETE
}