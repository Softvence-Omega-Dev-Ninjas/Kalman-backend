model Message {
    id String @id @default(uuid())
    senderId String
    reciverId String
    message String
    createdAt DateTime @default(now())
    sender User @relation("SentMessages", fields: [senderId],references: [id],onDelete:Cascade)
    reciver User @relation("ReceivedMessages", fields: [reciverId],references: [id],onDelete: Cascade)
}